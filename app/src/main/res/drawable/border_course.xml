<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10000dp" />
            <solid android:color="#ffff" />
            <stroke
                android:width="3dip"
                android:color="#ffffff" />
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5000dp" />
            <solid android:color="#ff8888" />
            <stroke
                android:width="2dip"
                android:color="#ffffff" />
            <padding
                android:bottom="7dp"
                android:left="10dp"
                android:right="10dp"
                android:top="7dp" />
        </shape>
    </item>
</selector>