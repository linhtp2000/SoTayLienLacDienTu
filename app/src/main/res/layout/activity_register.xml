<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="369dp"
        android:layout_height="624dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="238dp"
            android:layout_height="36dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="238dp"
            android:layout_height="36dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ellebaskerville_bold"
            android:text="Password:"
            android:textColor="@color/stealblue"
            android:textFontWeight="1000"

            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Create Account"
            android:textColor="@color/stealblue"
            android:textFontWeight="1500"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--            android:fontFamily="@font/ellebaskerville_bold"-->


        <Button
            android:id="@+id/btnResgister"
            style="@style/circle"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="224dp"
            android:layout_marginBottom="152dp"
            android:background="@drawable/buttoncircle"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ellebaskerville_bold"
            android:text="@string/email"
            android:textColor="@color/stealblue"
            android:textFontWeight="1000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/ellebaskerville_bold"
            android:text="Role:"


            android:textColor="@color/stealblue"
            android:textFontWeight="1000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPassword"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spnRole"
            android:layout_width="238dp"
            android:layout_height="30dp"
            android:layout_marginStart="58dp"

            android:layout_marginLeft="58dp"
            android:layout_marginTop="4dp"
            android:background="#24877B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/circle"
            android:layout_width="214dp"
            android:layout_height="36dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/border"
            android:fontFamily="@font/ellebaskerville_bold"
            android:text="Login Now"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by SPKT- 18110CL1A"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/useravt"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/buttoncircle"
        app:srcCompat="@drawable/ic_baseline_account_circle_24"
        app:tint="#FFFFFF"
        tools:ignore="MissingConstraints,VectorDrawableCompat"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@drawable/ic_baseline_account_circle_24" />

</androidx.constraintlayout.widget.ConstraintLayout>