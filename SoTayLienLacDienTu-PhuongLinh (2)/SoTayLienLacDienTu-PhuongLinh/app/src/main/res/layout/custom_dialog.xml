<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/custom_editsearch"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/custom_semester"
        android:id="@+id/txtareyousure"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="Are you sure?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/custom_state2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@id/txtareyousure"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnOK"
            android:textColor="@color/white"
            android:text="Ok"
            android:background="@drawable/custom_button"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnCancel"
            android:textColor="@color/white"
            android:text="Cancel"
            android:background="@drawable/custom_button_delete"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>