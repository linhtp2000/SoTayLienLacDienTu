<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/border2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842">


        <TextView
            android:id="@+id/tv5"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="16dp"
            android:background="@drawable/border_course"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv4"
            app:layout_constraintTop_toBottomOf="@+id/tv4"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Time:"
            app:layout_constraintStart_toStartOf="@+id/tv5"
            app:layout_constraintTop_toTopOf="@+id/tv5" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="219dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/tv5"
            tools:ignore="HardcodedText,RtlCompat" />

        <ImageView
            android:id="@+id/imgvTime"
            android:layout_width="51dp"
            android:layout_height="37dp"

            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/imgvFrom"
            app:layout_constraintTop_toTopOf="@+id/tv5"
            app:srcCompat="@drawable/ic_baseline_calendar_today_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvCourse"
            android:layout_width="230dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="44dp"
            android:text="Course"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="282dp"
            android:layout_height="28dp"
            android:text="Class"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="@+id/tvCourse"
            app:layout_constraintTop_toBottomOf="@+id/tvCourse" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_course"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv2"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/border_course"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvClass"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_course"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="8dp"
            android:background="@drawable/border_course"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv3"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="From:"
            app:layout_constraintStart_toStartOf="@+id/tv3"
            app:layout_constraintTop_toTopOf="@+id/tv3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="To:"
            app:layout_constraintStart_toStartOf="@+id/tv4"
            app:layout_constraintTop_toTopOf="@+id/tv4" />

        <EditText
            android:id="@+id/tvName"
            android:layout_width="255dp"
            android:layout_height="51dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/tv2"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/tvNoiDung"
            android:layout_width="223dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/tv1"
            tools:ignore="HardcodedText,RtlCompat" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Title:"
            app:layout_constraintStart_toStartOf="@+id/tv2"
            app:layout_constraintTop_toTopOf="@+id/tv2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Decription:"
            app:layout_constraintStart_toStartOf="@+id/tv1"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="214dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/tv3"
            tools:ignore="HardcodedText,RtlCompat" />

        <TextView
            android:id="@+id/tvTo"
            android:layout_width="215dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/tv4"
            tools:ignore="HardcodedText,RtlCompat" />

        <ImageView
            android:id="@+id/imgvFrom"
            android:layout_width="51dp"
            android:layout_height="37dp"
            app:layout_constraintStart_toEndOf="@+id/tvFrom"
            app:layout_constraintTop_toTopOf="@+id/tvFrom"
            app:srcCompat="@drawable/ic_baseline_calendar_today_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imgvTo"
            android:layout_width="51dp"
            android:layout_height="37dp"

            app:layout_constraintEnd_toEndOf="@+id/imgvFrom"
            app:layout_constraintTop_toTopOf="@+id/tvTo"
            app:srcCompat="@drawable/ic_baseline_calendar_today_24"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/dialogcancel"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boderbuttoncolor"
            android:fontFamily="@font/ellebaskerville_bold"

            android:text="Cancel"
            android:textColor="@color/white"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.822"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv5"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnOk"
            style="@style/dialog"
            android:layout_width="127dp"
            android:layout_height="39dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boderbuttoncolor"
            android:fontFamily="@font/ellebaskerville_bold"
            android:text="Ok"
            android:textColor="@color/white"
            android:textFontWeight="1000"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv5"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>